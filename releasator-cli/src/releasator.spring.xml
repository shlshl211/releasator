<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!-- this allows extensions to be added to existing configuration; TODO: find some way to enhance classpath for runtime plugins to come -->
    <import resource="file://${user.home}/.buildbox/etc/releasator.d/*.spring.xml"/>
    <bean id="scmAdapterManager" class="net.sf.buildbox.releasator.ng.ScmAdapterManager">
    </bean>
    <bean name="svn" class="net.sf.buildbox.releasator.ng.ScmSubversionAdapterFactory">
    </bean>
    <bean id="git" class="net.sf.buildbox.releasator.ng.ScmGitAdapterFactory">
    </bean>
</beans>

